<form action="" method="post" class="" novalidate="novalidate">
	<p>Your Name (required)<br>
	    <span class=""><input type="text" name="your-name" value="" size="40" class="" aria-required="true" aria-invalid="false"></span> </p>
	<p>Your Email (required)<br>
	    <span class=""><input type="email" name="your-email" value="" size="40" class="" aria-required="true" aria-invalid="false"></span> </p>
	<p>Subject<br>
	    <span class=""><input type="text" name="your-subject" value="" size="40" class="" aria-invalid="false"></span> </p>
	<p>Your Message<br>
	    <span class=""><textarea name="your-message" cols="40" rows="10" class="" aria-invalid="false"></textarea></span> </p>
	<p><input type="submit" value="Send" class="btn"></p>
